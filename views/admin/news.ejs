<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Site - Admin</title>
    <link rel="stylesheet" href="/styles/astyles.css">
    <script src="/scripts/formatDate.js"></script>
</head>
<body>
    <%- include('../partials/admin/header.ejs') %>
    <main>
        <h1>News</h1>
        <%- include('../partials/statuses.ejs') %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Article</th>
                    <th>Author</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <% for (var i = 0; i < results.rowCount; i++) { %>
            <tr>
                <td scope="row" data-label="ID" id="id<%= i+1 %>"><%= results.rows[i].id %></td>
                <td data-label="Article" id="title<%= i+1 %>"><a href="/news?id=<%= results.rows[i].id %>"><%= results.rows[i].title %></a></td>
                <td data-label="Author" id="author<%= i+1 %>"><%= results.rows[i].username %></td>
                <td data-label="Date" id="date<%= i+1 %>"></td>
                <script>document.getElementById("date<%= i+1 %>").innerHTML = formatDate("<%= results.rows[i].date %>");</script>
                <td data-label="Actions">
                    <a href="/admin/editnews?id=<%= results.rows[i].id %>">Edit</a>
                    <a href="/admin/deletenews?id=<%= results.rows[i].id %>">Delete</a>
                </td>
            </tr>
            <% } %>
        </table>
        <div class="admin-btn"><a href="/admin/createnews">New Post</a></div>
    </main>
    <%- include('../partials/admin/footer.ejs') %>
</body>
</html>